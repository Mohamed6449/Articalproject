@using Articalproject.Helper
@using Articalproject.Models.Identity
@using Articalproject.ViewModels.Home
@using Microsoft.AspNetCore.Identity
@inject IStringLocalizer<SharedResources> _SharedResources;
@inject SignInManager<User> _signInManager;
@model HomeViewModel
<style>
    .masthead {
        background: linear-gradient(180deg, #1E2A38 0%, #34495E 100%) !important;
        padding-top: 100px; /* علشان الهيدر ما يتغطاش بالـ navbar */
        padding-bottom: 50px;
    }

</style>

@if (!_signInManager.IsSignedIn(User))
{
    <header class="text-center text-white bg-primary masthead">
        <div class="container">
            <img class="img-fluid d-block mx-auto mb-4"
                 src="~/img/p1.png"
                 alt="Neon Book Icon"
                 style="max-width: 300px;">
            <h1 style="font-family: Cairo, sans-serif;">@_SharedResources[SharedResourcesKeys.MyArticles]</h1>
            <hr class="star-light">
            <h2 class="font-weight-light mb-0" style="font-family: Cairo, sans-serif;">@_SharedResources[SharedResourcesKeys.welcomeMy]</h2>
            <h2 class="font-weight-light mb-0" style="font-family: Cairo, sans-serif;margin: 11px;font-size: 21px;">&nbsp; :) @_SharedResources[SharedResourcesKeys.Happy]</h2>
        </div>
        <a class="btn btn-primary"
           asp-controller="Account"
           asp-action="Register"
           style="width: 254.5625px;background: var(--bs-blue);font-family: Cairo, sans-serif;height: 50px;margin: 5px;">
            @_SharedResources[SharedResourcesKeys.Joinnow]
        </a>
    </header>
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<section id="portfolio" class="portfolio">
    <div class="container">
        <h2 class="text-uppercase text-center text-secondary bounce animated" style="font-family: Cairo, sans-serif;">@_SharedResources[SharedResourcesKeys.Latestarticles]</h2>
        <div>
            <nav class="navbar navbar-dark navbar-expand-lg bg-secondary navigation-clean-search" style="margin: 20px;">
                <div class="container">
                    <button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navcol-1">
                        <ul class="navbar-nav">
                            <li class="nav-item"></li>
                            <li class="nav-item"></li>
                            <li class="nav-item"></li>
                        </ul>
                        <input style="font-family: Cairo, sans-serif; width: 200px;"
                               class="form-control search-field"
                               id="SearchItem"
                               type="text"
                               placeholder="@_SharedResources[SharedResourcesKeys.search]" />
                        <ul class="navbar-nav">
                            @{
                                foreach(var category in @Model.ListCategory)
                                {
                                    <li class="nav-item">
                                        <a href="@Url.Action("GetArticles", "Home", new { CategoryId = category.Id })"
                                           class="nav-link category-link"
                                           data-category-id="@category.Id"
                                           style="font-family: Cairo, sans-serif;">
                                            @(CultureHelper.IsArabic() ? category.NameAr : category.NameEn)
                                        </a>
                                    </li>
                                    }
                                }
                            }

                            <li class="nav-item">
                                <a href="@Url.Action("GetArticles", "Home", new { CategoryId = -1})"
                                   class="nav-link category-link"
                                   data-category-id="-1"
                                   style="font-family: Cairo, sans-serif;">@_SharedResources[SharedResourcesKeys.AllCategory]</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
        <hr class="star-dark mb-5">


      <div id="PostData"> 

            @await Html.PartialAsync("_PartialArticalData", Model)

        </div>
    </div>
 

    <nav class="text-center float-end" style="font-family: Lato, sans-serif;border-color: var(--bs-red);margin: 10px;">
        <ul class="pagination">
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">1</a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">2</a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">3</a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">4</a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#">5</a></li>
            <li class="page-item text-center" style="text-align: center;"><a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">»</span></a></li>
        </ul>
    </nav>
</section>

@if (!_signInManager.IsSignedIn(User))
{
    <section class="text-center text-white bg-primary masthead" id="about">
        <div class="container">
            <h2 class="text-uppercase text-center text-white" style="font-family: Cairo, sans-serif;">حول الموقع</h2>
            <hr class="star-light mb-5">
            <div class="row align-items-center">
                <div class="col">
                    <p class="lead text-center text-white" style="font-family: Cairo, sans-serif;">نحن نوفر لك الدعم الكامل لنشر مقالاتك ومشاركتها مع الاخرين . حيث ان موقع مقالتي يضمن لك كافة الحقوق للمقالات التي تنشرها&nbsp; على الموقع&nbsp;</p>
                </div>
            </div>
            <div class="text-center mt-4"><a class="btn btn-outline-light btn-xl" role="button" href="#"><i class="fa fa-american-sign-language-interpreting me-2"></i><span style="font-family: Cairo, sans-serif;">اشترك الان وانضم معنا&nbsp;</span></a></div>
        </div>
    </section>
}
<section id="contact">
    <div class="container">
        <h2 class="text-uppercase text-center text-secondary mb-0" style="font-family: Cairo, sans-serif;">تواصل معنا&nbsp;</h2>
        <hr class="star-dark mb-5">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <form id="contactForm" name="sentMessage" novalidate="novalidate">
                    <div class="control-group">
                        <div class="mb-0 form-floating controls pb-2"><input class="form-control" type="text" id="name" required="" placeholder="الاسم" style="font-family: Cairo, sans-serif;"><label class="form-label">Name</label><small class="form-text text-danger help-block"></small></div>
                    </div>
                    <div class="control-group">
                        <div class="mb-0 form-floating controls pb-2"><input class="form-control" type="email" id="email" required="" placeholder="Email Address" style="font-family: Cairo, sans-serif;"><label class="form-label">Email Address</label><small class="form-text text-danger help-block"></small></div>
                    </div>
                    <div class="control-group">
                        <div class="mb-0 form-floating controls pb-2"><input class="form-control" type="tel" id="phone" required="" placeholder="Phone Number" style="font-family: Cairo, sans-serif;"><label class="form-label">Phone Number</label><small class="form-text text-danger help-block"></small></div>
                    </div>
                    <div class="control-group">
                        <div class="mb-5 form-floating controls pb-2"><textarea class="form-control" id="message" required="" placeholder="Message" style="height: 150px;font-family: Cairo, sans-serif;"></textarea><label class="form-label">Message</label><small class="form-text text-danger help-block"></small></div>
                    </div>
                    <div id="success"></div>
                    <div><button class="btn btn-primary float-end btn-xl" id="sendMessageButton" type="submit" style="font-family: Cairo, sans-serif;">ارسل</button></div>
                </form>
            </div>
        </div>
    </div>
</section>
