@model IEnumerable<Articalproject.ViewModels.Categories.GetCategoriesListViewModel>
@{
    ViewData["Title"] = "قائمة الاصناف";
}

<h1 style="font-family:cairo"> الاصناف</h1>
<p>
    <a class="btn-primary"  asp-action="Create">اضافة صنف</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                التسلسل
            </th>
            <th>
                "اسم الصنف"
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id  
             </td>
          <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">تعديل</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
