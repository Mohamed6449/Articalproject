@model IEnumerable<Articalproject.ViewModels.Categories.GetCategoriesListViewModel>
@{
    ViewData["Title"] = "قائمة الاصناف";
}

<h1 style="font-family:cairo"> الاصناف</h1>
<form method="get" asp-action="Search" >
    <input type="search" name="SearchItem" class="search-field" placeholder="search ..." />
    <input type="submit" value="بحث" class="btn-primary" />

</form>
<br />
<p>
    <a class="btn-primary"  asp-action="Create">اضافة صنف</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                التسلسل
            </th>
            <th>
                "اسم الصنف"
            </th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id  
             </td>
          <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                        <a class="btn btn-primary" asp-action="Update" asp-route-id="@item.Id">تعديل</a> 
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    
     <a asp-action="Index" asp-route-Id=0  >الصفحة الاولي</a>
    if(Model.Count()>2)
    {
        <a asp-action="Index" asp-route-Id=@Model.Last().Id asp-route-next=@true >التالي</a>
	}
    if (ViewBag.Previous==true)
    {
        <a asp-action="Index" asp-route-Id=@Model.First().Id asp-route-next=@false>السابق</a>
    }

}