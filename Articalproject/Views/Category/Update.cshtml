
@model UpdateCategoryViewModel
@{
	ViewData["Title"] = "تعديل الصنف";
}

<h1 style="font-family:cairo"> تعديل</h1>
<div >
	<form asp-action="Update" method="post" >
		@Html.AntiForgeryToken()
		<div asp-validation-summary="All"></div>            
		<input type="hidden" asp-for="Id" />
		<Label>NameAr</Label>
		<div>
			<input asp-for="NameAr" class="form-control" />
			<span asp-validation-for="NameAr" class="text-danger" ></span>
		</div>
		<Label>NameEn</Label>
		<div>
			<input asp-for="NameEn" class="form-control" />
			<span asp-validation-for="NameEn" class="text-danger" ></span>
		</div>
		<div class="mt-3">
			<input type="submit" value="تعديل" class="btn btn-primary"/>
		</div>
	</form>
</div>
<div>

	<a  asp-action="Index">الرجوع الى القائمة</a>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}