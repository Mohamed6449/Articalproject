@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model Articalproject.ViewModels.Author.UpdateAuthorViewModel
@inject IStringLocalizer<SharedResources> _SharedResources;
@inject IAuthorizationService _authorizationService;
@{
    ViewData["Title"] = "تعديل";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@_SharedResources[SharedResourcesKeys.Edit]</h1>

<h4>@_SharedResources[SharedResourcesKeys.InformationAuthor]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="AuthorId" />
            <input type="hidden" asp-for="UserId" />
            
            <div class="form-group">
                <label class="control-label">@_SharedResources[SharedResourcesKeys.NameAr]</label>
                <input asp-for="NameAr" class="form-control" />
                <span asp-validation-for="NameAr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@_SharedResources[SharedResourcesKeys.NameEn]</label>
                <input asp-for="NameEn" class="form-control" />
                <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@_SharedResources[SharedResourcesKeys.Img]</label>
                <input asp-for="File" type="file" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@_SharedResources[SharedResourcesKeys.Bio]</label>
                <input asp-for="Bio" class="form-control" />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">@_SharedResources[SharedResourcesKeys.UserName]</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacebookUrl" class="control-label"></label>
                <input asp-for="FacebookUrl" class="form-control" />
                <span asp-validation-for="FacebookUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TwitterUrl" class="control-label"></label>
                <input asp-for="TwitterUrl" class="form-control" />
                <span asp-validation-for="TwitterUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instagram" class="control-label"></label>
                <input asp-for="Instagram" class="form-control" />
                <span asp-validation-for="Instagram" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=@_SharedResources[SharedResourcesKeys.Edit] class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (_authorizationService.AuthorizeAsync(User, "AdminPolicy").Result.Succeeded)
{
    <div>
        <a asp-action="Index">@_SharedResources[SharedResourcesKeys.BacktoList]</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
