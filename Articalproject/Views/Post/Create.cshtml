@using Microsoft.Extensions.Localization
@model Articalproject.ViewModels.Post.CreatePostViewModel
@inject IStringLocalizer<SharedResources> _SharedResources;
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:cairo"> @_SharedResources[SharedResourcesKeys.Create]</h1>

<h4 style="font-family:cairo">@_SharedResources[SharedResourcesKeys.InformationPost]</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Create" enctype="multipart/form-data">

            <input asp-for="AuthorId" type="hidden" class="form-control" />
			@Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> @_SharedResources[SharedResourcesKeys.Img]</label>
                <input asp-for="PostImage" type="file" class="form-control" />
                <span asp-validation-for="PostImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @_SharedResources[SharedResourcesKeys.PostTitle]</label>
                <input asp-for="PostTitle" class="form-control" />
                <span asp-validation-for="PostTitle" class="text-danger"></span>
            </div>

            <div class="form-group"> 
                <label>@_SharedResources[SharedResourcesKeys.Category]</label>
			    <select  asp-for="CategoryId" class="form-control" asp-items="ViewBag.Category" >
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> @_SharedResources[SharedResourcesKeys.PostDescription]</label>
                <textarea asp-for="PostDescription" class="form-control"></textarea>
                <span asp-validation-for="PostDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@_SharedResources[SharedResourcesKeys.Create]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@_SharedResources[SharedResourcesKeys.BacktoList]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
