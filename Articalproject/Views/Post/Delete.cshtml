@using Microsoft.Extensions.Localization
@model Articalproject.ViewModels.Post.GetPostsViewModel
@inject IStringLocalizer<SharedResources> _SharedResources;

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 style="font-family:cairo">@_SharedResources[SharedResourcesKeys.Delete]</h1>
<h3 style="font-family:cairo">@_SharedResources[SharedResourcesKeys.SureDelete]</h3>

<div>
    <h4 style="font-family:cairo">@_SharedResources[SharedResourcesKeys.PostDetails]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @_SharedResources[SharedResourcesKeys.UserName]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @_SharedResources[SharedResourcesKeys.FullName]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @_SharedResources[SharedResourcesKeys.Img]
        </dt>
        <dd class="col-sm-10">
            <img src=@Model.PostImage class="img-fluid" />
        </dd>
        <dt class="col-sm-2">
            @_SharedResources[SharedResourcesKeys.PostTitle]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostTitle)
        </dd>
        <dt class="col-sm-2">
            @_SharedResources[SharedResourcesKeys.PostDescription]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostDescription)
        </dd>
        <dt class="col-sm-2">
            @_SharedResources[SharedResourcesKeys.PostDate]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostDate)
        </dd>
        <dt class="col-sm-2">
            @_SharedResources[SharedResourcesKeys.Category]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>
</div>
<div>

    <form asp-action="Delete" asp-route-id="@Model?.Id">
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        
    </form>
    <a asp-action="Index">@_SharedResources[SharedResourcesKeys.BacktoList]</a>
</div>
