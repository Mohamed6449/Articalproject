@using Articalproject.Models.Identity
@using Microsoft.AspNetCore.Identity
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> _SharedResources;
@inject SignInManager<User> _signInManager;

@if (!_signInManager.IsSignedIn(User))
{

    <ul class="navbar-nav mx-auto">
        <li class="nav-item"></li>
        <li class="nav-item"></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register" style="font-family: Cairo, sans-serif;">@_SharedResources[SharedResourcesKeys.Register]</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login" style="font-family: Cairo, sans-serif;">@_SharedResources[SharedResourcesKeys.LogIn]</a></li>
    </ul>
}
else
{

<ul class="navbar-nav mx-auto">
    <li class="nav-item px-2">
        <form asp-action="Logout" asp-controller="Account" method="post" class="d-flex align-items-center gap-2">
            <button type="submit" class="btn btn-outline-danger btn-sm">
               @_SharedResources[SharedResourcesKeys.Logout]
            </button>
            <span  class="nav-link fw-bold text-primary me-2" style="font-family: Cairo, sans-serif;"> @User.Identity.Name</span>
        </form>
    </li>
</ul>
}